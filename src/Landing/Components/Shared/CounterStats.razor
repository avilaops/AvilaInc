@inject IJSRuntime JSRuntime

<section class="counter-stats section section-gray reveal">
    <div class="container">
        <div class="stats-grid">
            <div class="stat-item">
                <div class="stat-number">
                    <span class="counter-number" data-target="50">0</span>+
                </div>
                <div class="stat-label">Projetos Entregues</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">
                    <span class="counter-number" data-target="10">0</span>+
                </div>
                <div class="stat-label">Integrações</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">24h</div>
                <div class="stat-label">Suporte</div>
            </div>
        </div>
    </div>
</section>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("animateCounters");
        }
    }
}
